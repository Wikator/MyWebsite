<%= form_with(model: post, local: true, class: "needs-validation", novalidate: true) do |form| %>
  <div class="form-group mb-2">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: "Enter title" %>
  </div>

  <div class="form-group mb-2">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', rows: 3, placeholder: "Enter body text" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :thumbnail, class: 'form-label' %>
    <%= form.file_field :thumbnail, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
